{
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "formatter": {
        "indentStyle": "space"
    },
    "linter": {
        "rules": {
            "style": {
                "useImportType": "off"
            },
            "correctness": {
                "noUnusedFunctionParameters": "off"
            }
        }
    },
    "files": {
        "includes": [
            "**/*.ts",
            "**/*.js",
            "**/*.json"
        ]
    }
}